{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "moduleResolution": "node"
  },
  "include": [
    "src/index.web.ts",
    "src/index.node.ts",
    "src/**/*",
    "common/**/*",
    "circuits/**/*",
    "circuits/**/*.json",
    "utils/utils.ts"
  ],
  "exclude": ["node_modules", "**/__tests__/*", "dist", "common/src/utils/csca.ts"]
}
